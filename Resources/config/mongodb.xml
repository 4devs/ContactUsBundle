<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_contact_us.doctrine.message_manager.class">FDevs\ContactUsBundle\Doctrine\MessageManager</parameter>
    </parameters>

    <services>
        <service id="f_devs_contact_us.doctrine.model_manager" class="Doctrine\ODM\MongoDB\DocumentManager" public="false">
            <factory service="doctrine_mongodb" method="getManager"/>
            <argument>%f_devs_contact_us.doctrine.manager_name%</argument>
        </service>

        <service id="f_devs_contact_us.doctrine.message_manager" class="%f_devs_contact_us.doctrine.message_manager.class%">
            <argument type="service" id="f_devs_contact_us.doctrine.model_manager"/>
        </service>
    </services>

</container>
