<div class="row">
    <div class="col-lg-12">
        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

        <div class="row">
            <div class="col-md-6">
                <div class="form-group control-group">
                    {{ form_widget(form.name,{'attr':{'class':'form-control name','data-validation-required-message':'required.message.name'|trans({},'FDevsContactUsBundle') }}) }}
                    <p class="help-block text-danger">{{ form_errors(form.name) }}</p>
                </div>
                <div class="form-group control-group">
                    {{ form_widget(form.email,{'attr':{'class':'form-control','data-validation-required-message':'required.message.email'|trans({},'FDevsContactUsBundle'),'data-validation-email-message':'f_devs_contact_us.email.invalid'|trans({},'validators')} }) }}
                    <p class="help-block text-danger">{{ form_errors(form.email) }}</p>
                </div>
                <div class="form-group control-group">
                    {{ form_widget(form.phone,{'attr':{'class':'form-control'}}) }}
                    <p class="help-block text-danger">{{ form_errors(form.phone) }}</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group control-group">
                    {{ form_widget(form.message,{'attr':{'class':'form-control','data-validation-required-message':'required.message.message'|trans({},'FDevsContactUsBundle') }}) }}
                    <p class="help-block text-danger">{{ form_errors(form.message) }}</p>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
                <div id="success">{{ form_errors(form) }}</div>
                {{ form_widget(form.submit,{'attr':{'class':'btn btn-xl'}}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
